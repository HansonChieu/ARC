<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/main.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200..1000;1,200..1000&family=Space+Grotesk:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <title>ARC-WorkoutsAi</title>
  </head>
  <body>
    <%- include('partials/header', { page: '/workouts' }) %>

    <main class="container mx-auto p-4">
      <h1 class="mt-5 text-3xl font-bold">My Personal AI Trainer</h1>
      <p class="mt-4 text-gray-600">
        <em>Enter your body information and fitness goals so your AI trainer can assist you</em>
      </p>

      <hr class="my-4" />

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Form Column -->
        <div class="col-span-1">
          <div class="card shadow-2xl p-6">
            <form class="space-y-6" method="POST" id="workoutForm">
              <h2 class="text-xl font-bold">Enter Parameters</h2>

              <!-- Gender Selection -->
              <div>
                <h3 class="text-lg font-semibold">Select Sex</h3>
                <div class="flex mt-4 space-x-8">
                  <label class="flex flex-col items-center cursor-pointer">
                    <img class="w-20" src="/AthleticFemale.png" alt="Female icon" />
                    <p>Female</p>
                    <input type="radio" name="gender" value="female" class="radio" required />
                  </label>
                  <label class="flex flex-col items-center cursor-pointer">
                    <img class="w-20" src="/AthleticMale.png" alt="Male icon" />
                    <p>Male</p>
                    <input type="radio" name="gender" value="male" class="radio" required />
                  </label>
                </div>
              </div>

              <!-- Age Selection -->
              <div>
                <h3 class="text-lg font-semibold">Select Age</h3>
                <input
                  type="number"
                  name="age"
                  placeholder="Age"
                  class="input input-bordered w-1/2 mt-4 text-black"
                  min="10"
                  max="100"
                  required
                />
              </div>

              <!-- Experience Level Selection -->
              <div>
                <h3 class="text-lg font-semibold">Select Experience (Beginner to Expert)</h3>
                <input
                  id="experienceRange"
                  name="experience"
                  type="range"
                  min="0"
                  max="75"
                  value="25"
                  class="range w-full mt-4"
                  step="25"
                />
                <div class="flex justify-between text-xs mt-2">
                  <span>Beginner</span>
                  <span>Intermediate</span>
                  <span>Advanced</span>
                  <span>Expert</span>
                </div>
              </div>

              <!-- Fitness Goal -->
              <div>
                <h3 class="text-lg font-semibold">Select Fitness Goal</h3>
                <div class="flex mt-4 space-x-6">
                  <label class="flex items-center">
                    <input type="radio" name="fitnessGoal" value="LoseWeight" class="radio" required />
                    <span class="ml-2">Lose Weight</span>
                  </label>
                  <label class="flex items-center">
                    <input type="radio" name="fitnessGoal" value="GainMuscle" class="radio" required />
                    <span class="ml-2">Gain Muscle</span>
                  </label>
                  <label class="flex items-center">
                    <input type="radio" name="fitnessGoal" value="GainStrength" class="radio" required />
                    <span class="ml-2">Gain Strength</span>
                  </label>
                </div>
              </div>

              <!-- Submit Button -->
              <div class="mt-6 flex justify-center">
                <button href="/api/chat" type="submit" class="btn btn-primary px-20 py-4" id="generate">
                  <span>Generate Workout Plan</span>
                  <span hidden class="loading loading-dots loading-sm" role="status" aria-hidden="true"></span>
                </button>
              </div>
            </form>
          </div>
        </div>

        <!-- Output Column -->
        <div class="col-span-1">
          <div class="card shadow-2xl p-6">
            <h2 class="text-xl font-bold text-center">Generated Workout Plan</h2>
            <div id="workoutOutput" class="mt-4">
              <!-- The workout routine will be displayed here -->
            </div>
          </div>
        </div>
      </div>
    </main>
    <script type="module" src="/app.js"></script>
  </body>
</html>